<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="orderHistoryVM"
            type="com.indev.claraa.viewmodel.OrderHistoryViewModel"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.OrderHistory">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_img_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="#F0F7F7"
            android:backgroundTint="#F0F7F7"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_50sdp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageProduct"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_one" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claraa Fresh Flo Lens"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/bs_blue"
                    android:maxLines="2"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: -0.5"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvPackSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: -0.5"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: 50"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: 300"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


        </LinearLayout>

</FrameLayout>
</layout>