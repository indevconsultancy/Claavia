<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#F0F7F7"
        android:backgroundTint="#F0F7F7"
        android:padding="5dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/product_image" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claraa Fresh Flo"
                android:layout_gravity="center_vertical"
                android:textColor="@color/bs_blue"
                android:maxLines="2"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power: -0.50"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvPackSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packs SIze: 3 Lenses"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 50"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: 300"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>