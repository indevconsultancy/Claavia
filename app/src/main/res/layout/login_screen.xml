<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="loginVM"
            type="com.indev.claraa.viewmodel.LoginViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:src="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Email/ Username"
                        android:paddingLeft="20dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:background="@drawable/roundedittext"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/user_icon" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_marginRight="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittextcircle"
                        android:hint="@string/enter_your_user_name"
                        android:text="@={loginVM.username}"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Password"
                            android:paddingLeft="20dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin5"
                        android:background="@drawable/roundedittext"
                        android:gravity="center"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/password"
                            android:layout_weight="0"/>

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/edittextcircle"
                            android:hint="@string/enter_your_password"
                            android:text="@{loginVM.password}"
                            android:inputType="textPassword"
                            android:layout_marginRight="@dimen/margin15"
                            android:textSize="15dp"
                            android:layout_weight="2"/>

                        <ImageView
                            android:id="@+id/ivShowPassword"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/eye"
                            android:paddingRight="10dp"
                            android:layout_weight="0"
                            android:visibility="visible"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/signinButton"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/submitbutton"
                        android:text="Login"
                        android:onClick="@{() ->loginVM.signIn()}"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvForgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:onClick="@{() ->loginVM.forgot()}"
                    android:layout_marginTop="30dp"
                    android:text="Forgot Password?"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundedittext"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/registration" />

                    <TextView
                        android:id="@+id/tvRegistration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:onClick="@{() ->loginVM.registration()}"
                        android:text="New User Registration"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</layout>