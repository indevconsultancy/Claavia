<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="registrationVM"
            type="com.indev.claraa.viewmodel.RegistrationViewModel"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.UserRegistration">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_img_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llRegistrationWitheUs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register with us!"
                        android:textColor="@color/black"
                        android:fontFamily="@font/aleo_regular"
                        android:textSize="25dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/etUserName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="Enter username"
                            android:inputType="text"
                            android:padding="10dp"
                            android:text="@={registrationVM.username}"
                            android:fontFamily="@font/aleo_regular"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:fontFamily="@font/aleo_regular"
                            android:hint="Enter email address"
                            android:inputType="text"
                            android:padding="10dp"
                            android:text="@={registrationVM.email}"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Password"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:fontFamily="@font/aleo_regular"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:text="@={registrationVM.password}"
                            android:padding="10dp"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Password"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:hint="Confirm Password"
                            android:maxLength="10"
                            android:fontFamily="@font/aleo_regular"
                            android:inputType="textPassword"
                            android:text="@={registrationVM.confirmPassword}"
                            android:padding="10dp"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/Button"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/register_border"
                            android:textAllCaps="false"
                            android:text="Male" />

                        <TextView
                            android:id="@+id/Button2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/register_border"
                            android:textAllCaps="false"
                            android:text="Female" />

                        <TextView
                            android:id="@+id/Button3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/register_border"
                            android:text="Other"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnJoin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@id/btnSubmit"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/submitbutton"
                        android:onClick="@{() ->registrationVM.btnJoin()}"
                        android:text="Join Claraa"
                        android:gravity="center"
                        android:fontFamily="@font/aleo_regular"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello there, Partner!"
                        android:textColor="@color/black"
                        android:fontFamily="@font/aleo_regular"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/registration"
                        android:textSize="13dp"
                        android:fontFamily="@font/aleo_regular"
                        android:textColor="@color/gray_20"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business Name"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/etShopName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:hint="Enter your Business name"
                            android:inputType="text"
                            android:padding="10dp"
                            android:fontFamily="@font/aleo_regular"
                            android:text="@={registrationVM.shopName}"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Owner Name"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/etOwnerName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:fontFamily="@font/aleo_regular"
                            android:hint="Enter Full Name"
                            android:inputType="text"
                            android:padding="10dp"
                            android:text="@={registrationVM.ownerName}"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:fontFamily="@font/aleo_regular"
                            android:hint="Enter Email ID"
                            android:inputType="text"
                            android:padding="10dp"
                            android:text="@={registrationVM.email}"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:hint="(Autofilled from previous page)"
                            android:maxLength="10"
                            android:fontFamily="@font/aleo_regular"
                            android:inputType="number"
                            android:padding="10dp"
                            android:text="@={registrationVM.mobNo}"
                            android:textSize="15dp" />


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="State"
                                    android:fontFamily="@font/aleo_regular"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <Spinner
                                android:id="@+id/spnState"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:entries="@array/state"
                                android:fontFamily="@font/aleo_regular"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                tools:setOnItemSelectedListener="@{registrationVM.clickListener}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="District"
                                    android:fontFamily="@font/aleo_regular"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>


                            <Spinner
                                android:id="@+id/spnDistrict"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:entries="@array/district"
                                android:background="@drawable/btn_border"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:fontFamily="@font/aleo_regular"
                                android:inputType="text"
                                tools:setOnItemSelectedListener="@{registrationVM.clicksListener}"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="(Enter Business Address)"
                            android:inputType="text"
                            android:padding="10dp"
                            android:fontFamily="@font/aleo_regular"
                            android:text="@={registrationVM.etAddress}"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PinCode"
                                android:fontFamily="@font/aleo_regular"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/etPincode"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_border"
                            android:fontFamily="@font/aleo_regular"
                            android:hint="(Enter Pin Code)"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="10dp"
                            android:text="@={registrationVM.pinCode}"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@id/btnSubmit"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/submitbutton"
                        android:onClick="@{() ->registrationVM.btnSubmit()}"
                        android:text="Submit"
                        android:gravity="center"
                        android:fontFamily="@font/aleo_regular"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>

                </LinearLayout>




            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/llBottomImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/register1_img" />
        </LinearLayout>
    </FrameLayout>
</layout>