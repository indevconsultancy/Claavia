<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="registrationVM"
            type="com.indev.claraa.viewmodel.RegistrationViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_img_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llRegistrationWitheUs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aleo_regular"
                            android:text="Register with us!"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Username"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/etUserName"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter username"
                                android:inputType="text"
                                android:padding="10dp"
                                android:text="@={registrationVM.username}"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Email"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter email address"
                                android:inputType="text"
                                android:padding="10dp"
                                android:text="@={registrationVM.email}"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Password"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:text="@={registrationVM.password}"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Password"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Confirm Password"
                                android:inputType="textPassword"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:text="@={registrationVM.confirmPassword}"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnJoin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@id/btnSubmit"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/submitbutton"
                            android:fontFamily="@font/aleo_regular"
                            android:gravity="center"
                            android:text="Join Claraa"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llUpdateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aleo_regular"
                            android:text="Hello there, Partner!"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aleo_regular"
                            android:text="@string/registration"
                            android:textColor="@color/gray_20"
                            android:textSize="13dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Business Name"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/etShopName"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter your Business name"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:padding="10dp"
                                android:text="@={registrationVM.shopName}"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Owner Name"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/etOwnerName"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter Full Name"
                                android:inputType="text"
                                android:padding="10dp"
                                android:text="@={registrationVM.ownerName}"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Email"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter Email ID"
                                android:padding="10dp"
                                android:text="@={registrationVM.email}"
                                android:textSize="15dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Password"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="Enter Password"
                                android:padding="10dp"
                                android:text="@={registrationVM.password}"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Mobile Number"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="(Autofilled from previous page)"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:text="@={registrationVM.mobNo}"
                                android:textSize="15dp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aleo_regular"
                                        android:text="State"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textColor="@color/black" />


                                </LinearLayout>

                                <Spinner
                                    android:id="@+id/spnState"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/btn_border"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    android:entries="@array/state"
                                    android:fontFamily="@font/aleo_regular"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                                <!-- tools:setOnItemSelectedListener="@{registrationVM.clicksListener}"/>-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aleo_regular"
                                        android:text="District"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textColor="@color/black" />


                                </LinearLayout>


                                <Spinner
                                    android:id="@+id/spnDistrict"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/btn_border"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    android:entries="@array/district"
                                    android:fontFamily="@font/aleo_regular"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                                <!--tools:setOnItemSelectedListener="@{registrationVM.clickListener}" />-->

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="Address"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/etAddress"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="(Enter Business Address)"
                                android:inputType="text"
                                android:padding="10dp"
                                android:text="@={registrationVM.etAddress}"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aleo_regular"
                                    android:text="PinCode"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/etPincode"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/aleo_regular"
                                android:hint="(Enter Pin Code)"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="10dp"
                                android:text="@={registrationVM.pinCode}"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/btnMale"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:enabled="true"
                                android:background="@drawable/btn_color_change"
                                android:gravity="center"
                                android:text="Male"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/btnFemale"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_color_change"
                                android:gravity="center"
                                android:enabled="true"
                                android:text="Female"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/btnOther"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_color_change"
                                android:gravity="center"
                                android:enabled="true"
                                android:text="Other"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                        </LinearLayout>


                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@id/btnSubmit"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/submitbutton"
                            android:fontFamily="@font/aleo_regular"
                            android:gravity="center"
                            android:onClick="@{() ->registrationVM.btnSubmit()}"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/llBottomImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:src="@drawable/register1_img"/>

        </LinearLayout>

    </RelativeLayout>
</layout>